{
  "manifest_version": 3,
  "name": "Attendance Reader",
  "version": "1.0",
  "description": "Reads attendance data from Saylani campus pages",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://admin.saylanimit.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://admin.saylanimit.com/view-attendance*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
