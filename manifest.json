{
  "manifest_version": 3,
  "name": "Campus Attendance Reader",
  "description": "Reads class attendance from campus pages",
  "version": "1.0",

  "permissions": ["activeTab", "scripting"],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
